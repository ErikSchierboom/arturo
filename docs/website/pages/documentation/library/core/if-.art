name: "if?"
type: :function
description: "perform action, if given condition is not false or null and return condition result"
module: "Core"
line: 475
source: "https://github.com/arturo-lang/arturo/blob/v0.9.83/src/library/Core.nim#L475"
returns: [
                :logical
        ]
examples: [
                {
                        x: 2
                        
                        result: if? x=2 -> print "yes, that's right!"
                        ; yes, that's right!
                        
                        print result
                        ; true
                }
                 {
                        x: 2
                        z: 3
                        
                        if? x>z [
                            print "x was greater than z"
                        ]
                        else [
                            print "nope, x was not greater than z"
                        ]
                }
        ]
attributes: #[
        ]
arguments: #[
        condition: [
                        :any
                ]
        action: [
                        :block
                ]
        ]
related: [
                "Core/if"
                 "Core/unless?"
                 "Core/try?"
                 "Core/switch"
        ]