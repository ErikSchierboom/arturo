name: "flatten"
type: :function
description: "flatten given collection by eliminating nested blocks"
module: "Collections"
line: 522
source: "https://github.com/arturo-lang/arturo/blob/v0.9.83/src/library/Collections.nim#L522"
returns: [
                :block
        ]
examples: [
                {
                        arr: [[1 2 3] [4 5 6]]
                        print flatten arr
                        ; 1 2 3 4 5 6
                }
                 {
                        arr: [[1 2 3] [4 5 6]]
                        flatten 'arr
                        ; arr: [1 2 3 4 5 6]
                }
                 {
                        flatten [1 [2 3] [4 [5 6]]]
                        ; => [1 2 3 4 5 6]
                }
                 {
                        flatten.once [1 [2 3] [4 [5 6]]]
                        ; => [1 2 3 4 [5 6]]
                }
        ]
attributes: #[
        once: #[
                types: [
                                :logical
                        ]
                description: "do not perform recursive flattening"
                ]
        ]
arguments: #[
        collection: [
                        :literal
                         :block
                ]
        ]
